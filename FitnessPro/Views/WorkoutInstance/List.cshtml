
@{
    ViewBag.Title = "List";
}

<div id="workoutInstances">
    <h2>My Workouts</h2>
    <input type="button" value="Plan Workout" class="btn btn-primary" data-toggle="modal" data-target="#workoutInstanceItem" data-bind="click:add" />
    <table class="table">
        <thead>
            <tr>
                <th style="font-size:20px;">Name</th>
                <th style="font-size:20px;">Data</th>
                <th style="font-size:20px;">Status</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach:WorkoutInstances">
            <tr>
                <td class="col-xs-5" data-bind="text:WorkoutName"></td>
                <td class="col-xs-5" data-bind="text:moment(Date).format('LL')"></td>
                <td class="col-xs-5" data-bind="text:StatusDisplay"></td>
                <td class="col-xs-1">
                    <input type="button" value="Details" class="btn btn-info" data-toggle="modal" data-target="#workoutInstanceDetailsItem" data-bind="click:$parent.details, visible:!Status" />
                    <input type="button" value="Details" class="btn btn-info" data-toggle="modal" data-target="#workoutInstanceDetailsItemCompleted" data-bind="click:$parent.details, visible:Status" />
                </td>
                <td class="col-xs-1">
                    <input type="button" value="Complete" class="btn btn-info" data-toggle="modal" data-target="#workoutInstanceCompleteItem" data-bind="click:$parent.complete, visible:!Status" />
                </td>
                <td class="col-xs-1">
                    <input type="button" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#workoutInstanceDeleteItem" data-bind="click:$parent.deleteWindow" />
                </td>
            </tr>
        </tbody>
    </table>
    @Html.Partial("Item")
    @Html.Partial("Details")
    @Html.Partial("DetailsCompleted")
    @Html.Partial("Complete")
    @Html.Partial("DeleteWarning")
</div>
<script>
    $(function () {
        var vm = new WorkoutInstance();
        vm.refresh();
        ko.applyBindings(vm, $("#workoutInstances").get(0));
    });
</script>

